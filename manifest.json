{
  "id": "/",
  "name": "Sistema Izanagi - Gestión Comercial",
  "short_name": "Izanagi",
  "description": "Sistema completo de ventas, inventario, nómina y gestión financiera. Optimizado para móviles con experiencia nativa. Ideal para negocios que requieren control total y reportes profesionales.",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui", "window-controls-overlay"],
  "background_color": "#002A8F",
  "theme_color": "#002A8F",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "es",
  "dir": "ltr",
  "categories": ["business", "productivity", "finance"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+izanagi",
      "url": "/?action=%s"
    }
  ],
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Punto de Venta",
      "short_name": "POS",
      "description": "Acceso directo al terminal de ventas",
      "url": "/#pos",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Inventario",
      "short_name": "Stock",
      "description": "Gestionar productos y categorías",
      "url": "/#inventory",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Reportes",
      "short_name": "Reports",
      "description": "Ver reportes y estadísticas",
      "url": "/#reports",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Compras",
      "short_name": "Buy",
      "description": "Registrar compras de inventario",
      "url": "/#purchases",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Nómina",
      "short_name": "Payroll",
      "description": "Gestionar pagos a trabajadores",
      "url": "/#payroll",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-1.png",
      "sizes": "540x960",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Punto de Venta - Interfaz principal de ventas"
    },
    {
      "src": "/screenshot-2.png", 
      "sizes": "540x960",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Reportes - Dashboard de estadísticas"
    },
    {
      "src": "/screenshot-wide-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vista de escritorio - Panel completo"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications",
    "storage"
  ]
} 